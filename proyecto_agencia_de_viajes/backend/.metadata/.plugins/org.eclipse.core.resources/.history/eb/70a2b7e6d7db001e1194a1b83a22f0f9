package com.viajes.init.service;

import java.util.List;

import com.viajes.init.dtos.HotelDto;
import com.viajes.init.dtos.ReservaDto;
import com.viajes.init.dtos.VueloDto;

public interface ReservasService {
	
	/*
	 Alta de la misma con los datos de reserva. securizado mediante token JWT para que solo usuarios determinados puedan utilizarlo).
	 Lista de reservas por cliente 
	 */
	HotelDto getHotel(int idHotel);
	
	VueloDto getVuelo(int idVuelo);
	
	List<ReservaDto> catalogoReservas(String cliente);
	
	void alta(ReservaDto reserva);

}
